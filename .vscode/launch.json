    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Console App",
            "type": "python",
            "request": "launch",
            "stopOnEntry": true,
            "program": "${file}",
            "externalConsole": false,
            "pythonPath": "d:/envs/eedn/Scripts/python.exe",
            "debugOptions": [
             "WaitOnAbnormalExit",
             "WaitOnNormalExit",
             "RedirectOutput"
            ]
        }
    ]
}